---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import DefaultPageContent from "../components/DefaultPageContent.astro";
import { SITE_DESCRIPTION } from "../consts.ts";
---

<Layout isFrontPage={true}>
  <p slot="after-header">{SITE_DESCRIPTION}</p>

  <Nav links={[]} />

  <DefaultPageContent />

  <Nav
    links={[
      {
        href: "/spa-1.html",
        title: "SPA Demo",
        description: "Inside a single page app",
      },
      {
        href: "/window.html",
        title: "Window Demo",
        description: "With scrollRestoration='manual'",
      },
    ]}
  />
</Layout>

<script>
  import { showDebugInfo } from "../js/global.js";
  import { restoreScroll, addListener } from "../../../src/index.js";
  import { $, $$ } from "../js/helpers.js";

  window.history.scrollRestoration = "auto";
  $$(".overflow-y-auto,.overflow-x-auto,.overflow-auto").forEach((el) => {
    addListener(el, "store", ({ type, detail: { position } }) =>
      console.log({ type, position })
    );
    addListener(el, "restore", ({ type, detail: { position } }) =>
      console.log({ type, position })
    );
  });
  restoreScroll(".overflow-y-auto,.overflow-x-auto,.overflow-auto", {
    debug: true,
    events: {
      restore: (el, event) => {
        showDebugInfo("restored", el, event.detail.position);
      },
      store: (el, event) => {
        showDebugInfo("restored", el, event.detail.position);
      },
    },
  });
</script>
