---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  fullBleed?: boolean;
  noindex?: boolean;
  intro?: string;
}

import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Header from "../components/Header.astro";

const { title, description, noindex, fullBleed = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head
    title={title ? `${title} - ${SITE_TITLE}` : SITE_TITLE}
    description={description ?? SITE_DESCRIPTION}
    noindex={noindex}
  />
  <body class="bg-black text-white font-mono font-light leading-[1.6]">
    <Header />

    <main class:list={["my-4 px-4", !fullBleed && "mx-auto max-w-5xl"]}>
      <div class="my-4 text-center max-w-2xl mx-auto">
        <slot name="instructions" />
      </div>

      <slot />

      <Footer />
    </main>
  </body>
</html>
