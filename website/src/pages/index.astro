---
import Layout from "../layouts/Layout.astro";
import ScrollingElements from "../components/ScrollingElements.astro";
import CodeBlock from "../components/CodeBlock.astro";

const code = `
import { restoreScroll } from "@hirasso/restore-scroll";

/** Restore the scroll position of all overflowing elements (tailwind classes in this case) */
document.querySelectorAll(".overflow-y-auto,.overflow-x-auto,.overflow-auto")
		.forEach((el) => restoreScroll(el));
`;
---

<Layout>

  <CodeBlock code={code} />

  <ScrollingElements vertical horizontal table />

</Layout>

<script>
  import { showDebugInfo } from "../js/global.js";
  import { restoreScroll } from "../../../src/index.js";
  import { $$ } from "../js/helpers.js";
  import type { ScrollPosition } from "../../../src/defs.js";

  window.history.scrollRestoration = "auto";

  $$(".overflow-y-auto,.overflow-x-auto,.overflow-auto").forEach((el) => {
    el.addEventListener("restore-scroll:restore", (e) => {
      const event = e as CustomEvent<{ position: ScrollPosition }>;
      console.log(event.detail.position);
    });

    restoreScroll(el, {
      debug: true,
      events: {
        restore: showDebugInfo,
        store: showDebugInfo,
      },
    });
  });
</script>
